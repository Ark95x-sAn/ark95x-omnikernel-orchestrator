# ARK95X Omnikernel Orchestrator - Environment Variables
# Copy this file to .env and fill in your values

# === AI Model API Keys ===
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
OLLAMA_HOST=http://localhost:11434

# === Redis ===
REDIS_URL=redis://localhost:6379/0

# === Qdrant Vector Store ===
QDRANT_HOST=localhost
QDRANT_PORT=6333

# === Orchestrator Settings ===
ARK95X_ORCHESTRATOR__HEAL_INTERVAL=30
ARK95X_ORCHESTRATOR__SCALE_THRESHOLD=0.85
ARK95X_ORCHESTRATOR__MAX_AGENTS=50
ARK95X_ORCHESTRATOR__TASK_TIMEOUT=300

# === Self Healing ===
ARK95X_SELF_HEALING__CIRCUIT_FAILURE_THRESHOLD=5
ARK95X_SELF_HEALING__CIRCUIT_RECOVERY_TIMEOUT=60

# === Pipeline ===
ARK95X_PIPELINE__MAX_PARALLEL=10

# === Telemetry ===
ARK95X_TELEMETRY__RETENTION_POINTS=10000

# === Models ===
ARK95X_MODELS__DEFAULT_PROVIDER=ollama
ARK95X_MODELS__FALLBACK_PROVIDER=openai
ARK95X_MODELS__CACHE_ENABLED=true

# === Logging ===
ARK95X_LOGGING__LEVEL=INFO
ARK95X_LOGGING__FILE=logs/ark95x.log

# === API Server ===
API_HOST=0.0.0.0
API_PORT=8000
